            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_updated\",\n  \"bio\": \"Updated bio - Professional musician\",\n  \"avatarUrl\": \"\",\n  \"coverUrl\": \"\"\n}"
            },
            "url": {
