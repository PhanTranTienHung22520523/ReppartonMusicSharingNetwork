    {
      "name": "üéµ Music Features",
      "item": [
        {
          "name": "Upload Song",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "My Awesome Song",
                  "type": "text"
                },
                {
                  "key": "artistId",
                  "value": "{{user_id}}",
                  "type": "text"
                },
                {
                  "key": "audioFile",
                  "type": "file",
                  "src": "path/to/your/audio.mp3"
                },
                {
                  "key": "coverFile",
                  "type": "file",
                  "src": "path/to/your/cover.jpg"
                },
                {
                  "key": "isPrivate",
                  "value": "false",
                  "type": "text"
                },
                {
                  "key": "genreIds",
                  "value": "genre1,genre2",
                  "type": "text"
