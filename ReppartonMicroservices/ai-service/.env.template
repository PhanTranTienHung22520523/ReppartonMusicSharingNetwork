# Environment Configuration for Repparton AI Service
# Copy this file to .env and fill in your values

# ==================== SERVICE CONFIGURATION ====================
PORT=5000
DEBUG=False
HOST=0.0.0.0

# ==================== API KEYS ====================
# Instagram API (Facebook Graph API)
INSTAGRAM_API_TOKEN=your_instagram_api_token_here

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# Spotify Web API
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ==================== FILE STORAGE ====================
MAX_FILE_SIZE_MB=100
UPLOAD_FOLDER=./uploads
CLEANUP_INTERVAL_HOURS=24

# ==================== MODEL CONFIGURATION ====================
MODEL_DIR=./src/models
RECOMMENDATION_MODEL_PATH=./src/models/recommender_model.pkl

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ==================== CONFIDENCE THRESHOLDS ====================
# Artist verification confidence thresholds
AUTO_APPROVE_THRESHOLD=0.7
MANUAL_REVIEW_THRESHOLD=0.4

# ==================== SECURITY ====================
# Add API key for securing endpoints (optional)
API_KEY=your_secret_api_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== EXTERNAL SERVICES ====================
# MongoDB connection (if needed for caching)
# MONGODB_URI=mongodb://localhost:27017/repparton_ai

# Redis connection (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

# ==================== PERFORMANCE ====================
# Number of workers for Gunicorn
WORKERS=4
TIMEOUT=120

# ==================== FEATURE FLAGS ====================
ENABLE_DOCUMENT_OCR=false
ENABLE_SOCIAL_MEDIA_API=false
ENABLE_ADVANCED_ANALYSIS=true
ENABLE_CACHING=false
